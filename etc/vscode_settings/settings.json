{
    "editor.tabSize": 2,
    // "workbench.colorCustomizations": {
    //     "editor.background": "#0d1117",
    //     "editorGutter.background": "#0d1117",
    //     "statusBar.background": "#0d1117",
    // },
    "workbench.iconTheme": "material-icon-theme",
    "workbench.sideBar.location": "left",
    "workbench.statusBar.visible": true,
    "workbench.activityBar.visible": true,
    "window.newWindowDimensions": "maximized",
    // font
    "editor.fontFamily": "Hack, monospace",
    "editor.fontWeight": "500",
    "editor.fontSize": 15.0,
    // editor
    "breadcrumbs.enabled": false,
    "editor.minimap.enabled": true,
    "editor.minimap.showSlider": "always",
    // "editor.minimap.renderCharacters": false,
    "editor.wordWrap": "on",
    "editor.renderWhitespace": "none",
    "editor.cursorBlinking": "smooth",
    "editor.snippetSuggestions": "top",
    // explorer
    // "window.menuBarVisibility": "default",
    "explorer.confirmDragAndDrop": true,
    "explorer.confirmDelete": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "node_modules": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "public/bundle.js": true,
        "dist/bundle.js": true,
    },

    // language format setting
    // html
    "html.format.extraLiners": "",
    "html.format.endWithNewline": true,
    "html.format.maxPreserveNewLines": 1,
    "html.format.unformatted": "span",
    "html.format.wrapLineLength": 0, // default: 120
    "[html]": {
        "editor.tabSize": 2,
        "editor.suggest.insertMode": "replace"
    },

    // javascript
    "javascript.updateImportsOnFileMove.enabled": "always",
    "[javascript]": {
        "editor.tabSize": 2,
    },

    // C & C++
    "C_Cpp.updateChannel": "Insiders",

    // vim
    "vim.surround": true,

    "vim.easymotion": true,
    "vim.easymotionKeys": "sdfghjkl",

    "vim.hlsearch": true,
    "vim.foldfix": true,
    "vim.incsearch": true,

    "vim.leader": "<space>",

    "vim.normalModeKeyBindingsNonRecursive": [
        { "before": ["j"], "after": ["g", "j"] },
        { "before": ["k"], "after": ["g", "k"] },
        { "before": ["<C-j>"], "after": ["5", "g", "j"] },
        { "before": ["<C-k>"], "after": ["5", "g","k"] },
        { "before": ["C-h"], "after": ["^"] },
        { "before": ["C-l"], "after": ["$"] },
        { "before": ["x"], "after": ["\"", "_", "x"] },
        { "before": ["s"], "after": ["\"", "_", "s"] },
        { "before": ["<Esc>"], "commands": [":nohl"] },
        { "before": ["<C-[>", "<C-[>"], "commands": [":nohl"] }
    ],

    "vim.normalModeKeyBindings": [],

    "vim.insertModeKeyBindings": [
      { "before": ["j", "j"], "after": ["<Esc>"] }
    ],

    "vim.visualModeKeyBindingsNonRecursive": [
        { "before": ["<C-j>"], "after": ["5", "j"] },
        { "before": ["<C-k>"], "after": ["5", "k"] },
        { "before": ["p"], "after": ["\"", "_", "d", "P"] },
        { "before": ["C-h"], "after": ["^"] },
        { "before": ["C-l"], "after": ["$"] },
    ],

    "vim.handleKeys": {
        "<C-w>": false,
        "<C-b>": false,
    },

    "vim.highlightedyank.enable": true,
    "vim.highlightedyank.color": "rgba(1, 240, 170, 0.5)", 
    "vim.highlightedyank.duration": 201, "vim.useSystemClipboard": true, 

    // eslint
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },

    // styled-components
    "emmet.triggerExpansionOnTab": true,

    // code-runner
    "code-runner.clearPreviousOutput": true,

    // liveServer
    "liveServer.settings.donotShowInfoMsg": true,

    // terminal
    "terminal.integrated.defaultProfile.windows": "MSYS2",
    "terminal.integrated.profiles.windows": {
        "MSYS2": {
            "overrideName": true,
            "path": "C:\\msys64\\usr\\bin\\bash.exe",
            "env": {
                "MSYSTEM": "MINGW64",
                "CHERE_INVOKING": "1"
            },
            "args": [
                "--login"
            ],
        },
    },

    // random background
    "backgroundCover.imagePath": "d:\\Kenzo\\Wallpaper\\0.Destaque do Windows\\854a449545c1b19c2013a48d044b380469b157c85e8003d7cdfe3cb5a6d4b724.jpg",
    "backgroundCover.opacity": 0.4,
    "backgroundCover.randomImageFolder": "d:\\Kenzo\\Wallpaper\\0.Destaque do Windows",
    "backgroundCover.autoStatus": false,

    // etc
    "workbench.colorTheme": "Dark+ Black",
    "window.zoomLevel": -1,
}