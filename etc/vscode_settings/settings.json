{
    "workbench.colorTheme": "monokai-charcoal (red)",
    "workbench.iconTheme": "vscode-great-icons",
    "workbench.sideBar.location": "left",
    "workbench.statusBar.visible": true,
    "workbench.activityBar.visible": true,
    "window.newWindowDimensions": "maximized",
    "window.zoomLevel": -1,


    // font
    "editor.fontFamily": "Hack, monospace",
    "editor.fontWeight": "500",
    "editor.fontSize": 15.0,


    // editor
    "breadcrumbs.enabled": false,
    "editor.minimap.enabled": true,
    "editor.minimap.showSlider": "always",
    // "editor.minimap.renderCharacters": false,
    "editor.wordWrap": "on",
    "editor.renderWhitespace": "none",
    "editor.cursorBlinking": "smooth",
    "editor.snippetSuggestions": "top",


    // explorer
    "window.menuBarVisibility": "default",
    "explorer.confirmDragAndDrop": true,
    "explorer.confirmDelete": true,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "node_modules": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "public/bundle.js": true,
        "dist/bundle.js": true,
    },


    // C & C++
    "C_Cpp.updateChannel": "Insiders",


    // html format
    "html.format.extraLiners": "",
    "html.format.endWithNewline": true,
    "html.format.maxPreserveNewLines": 1,
    "html.format.unformatted": "span",
    "html.format.wrapLineLength": 0, // default: 120
    "[html]": {
        "editor.tabSize": 2,
        "editor.suggest.insertMode": "replace"
    },


    // javascript
    "javascript.updateImportsOnFileMove.enabled": "always",


    // vim
    "vim.hlsearch": true,
    "vim.foldfix": true,

    "vim.normalModeKeyBindingsNonRecursive": [
        { "before": ["<C-j>"], "after": ["5", "j"] },
        { "before": ["<C-k>"], "after": ["5", "k"] },
        { "before": ["C-h"], "after": ["^"] },
        { "before": ["C-l"], "after": ["$"] },
        { "before": ["<Esc>"], "commands": [":nohl"] },
        { "before": ["x"], "after": ["\"", "_", "x"] },
        { "before": ["s"], "after": ["\"", "_", "s"] },
        // { "before": ["g", "J"], "after": ["J", "x"] },
    ],

    "vim.normalModeKeyBindings": [],

    "vim.insertModeKeyBindings": [
      { "before": ["j", "j"], "after": ["<Esc>"] }
    ],

    "vim.visualModeKeyBindingsNonRecursive": [
        { "before": ["<C-j>"], "after": ["5", "j"] },
        { "before": ["<C-k>"], "after": ["5", "k"] },
        { "before": ["p"], "after": ["\"", "_", "d", "P"] },
        { "before": ["C-h"], "after": ["^"] },
        { "before": ["C-l"], "after": ["$"] },
    ],

    "vim.handleKeys": {
        "<C-w>": false,
        "<C-b>": false,
        // "gJ": false,
    },

    "vim.highlightedyank.enable": true,
    "vim.highlightedyank.color": "rgba(1, 240, 170, 0.5)", 
    "vim.highlightedyank.duration": 201, "vim.useSystemClipboard": true, 


    // code-runner
    "code-runner.clearPreviousOutput": true,


    // liveServer
    "liveServer.settings.donotShowInfoMsg": true,


    // terminal
    "terminal.integrated.rendererType": "dom",

    // use gitbash
    // "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.exe",

    // use msys2
    "terminal.integrated.shell.windows": "C:\\msys64\\usr\\bin\\bash.exe",
    "terminal.integrated.env.windows": {
        "MSYSTEM": "MINGW64",
        "CHERE_INVOKING": "1"
    },
    "terminal.integrated.shellArgs.windows": [
        "--login"
    ],
}